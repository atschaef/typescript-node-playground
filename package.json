{
  "name": "typescript-node-playground",
  "version": "1.0.0",
  "private": false,
  "engines": {
    "node": "^10",
    "npm": "^6.4.1"
  },
  "scripts": {
    "build": "npm run clean; tsc -p . && rsync -a --include='*.png' ./src dist/",
    "clean": "rimraf dist",
    "start": "node-pg-migrate up && node ./dist/server.js",
    "dev": "node-pg-migrate up && NODE_ENV=development nodemon -e js,ts --exec 'ts-node' --files --cache-directory .tscache --ignore dist/ ./server.ts | bunyan -o short -L",
    "test": "node-pg-migrate up && NODE_ENV=test TS_NODE_FILES=true nyc --check-coverage mocha --require ts-node/register 'test/**/*.{js,ts}' --recursive --timeout 20000 --exit",
    "test:watch": "node-pg-migrate up && NODE_ENV=test TS_NODE_FILES=true mocha --require ts-node/register 'test/**/*.{js,ts}' --recursive --timeout 20000 ./test/integration/ --watch-extensions ts --watch",
    "integrate": "npm audit && npm run lint && git pull --rebase origin development && npm install && npm run test && git push origin development",
    "integrate:production": "git checkout master && git pull --rebase origin master && git merge origin/development && npm install && npm audit && npm run lint && npm test && git push origin master && git checkout development",
    "lint": "tslint -p ./tsconfig.json -c tslint.json",
    "types:check": "tsc -p ./tsconfig.json --noEmit",
    "precommit": "precise-commits",
    "make-me-pretty": "prettier --write {src/**,test/**,.}/*.{ts,js,json,md}",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "test",
      "coverage",
      "migrations",
      "src/database/index.ts",
      "server.ts",
      "app.ts",
      "config.ts",
      "dist",
      "src/types",
      "src/typings",
      "src/utils/sentry.utils.ts"
    ],
    "all": true,
    "reporter": [
      "html",
      "text"
    ],
    "extension": [
      ".ts",
      ".js"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/bunyan": "^1.8.5",
    "@types/cors": "^2.8.4",
    "@types/dev-ip": "^1.0.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/graphql": "^14.0.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.117",
    "@types/luxon": "^1.4.1",
    "@types/massive": "^5.4.0",
    "@types/node": "^10.11.7",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/raven": "^2.5.1",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^9.4.2",
    "apollo-server-express": "^2.1.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cors": "^2.8.3",
    "dev-ip": "^1.0.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "graphql": "^14.0.2",
    "graphql-resolvers": "^0.2.2",
    "graphql-tools": "^4.0.0",
    "graphql-upload": "^8.0.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "luxon": "^1.5.0",
    "massive": "^5.5.1",
    "node-pg-migrate": "^3.13.0",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "pg-monitor": "^1.1.0",
    "raven": "^2.6.4",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.2",
    "uuid": "^3.3.2",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.5",
    "@types/supertest": "^2.0.6",
    "chai": "^4.2.0",
    "husky": "^1.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "precise-commits": "^1.0.2",
    "prettier": "^1.14.3",
    "sinon": "^6.3.5",
    "supertest": "^3.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  }
}
